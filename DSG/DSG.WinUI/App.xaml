<Application x:Class="DSG.WinUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DSG.WinUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Page">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="LightSeaGreen" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="local:WelcomeScreen" BasedOn="{StaticResource {x:Type Page}}"/>
        <Style TargetType="local:ManageSets" BasedOn="{StaticResource {x:Type Page}}"/>
    </Application.Resources>
</Application>
